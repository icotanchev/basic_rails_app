= form_for(@daily_report) do |f|
  - if @daily_report.errors.any?
    #error_explanation
      %h2
        = pluralize(@daily_report.errors.count, "error")
        prohibited this daily_report from being saved:
      %ul
        - @daily_report.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :client_id
    %br/
    = f.number_field :client_id
  .field
    = f.label :price
    %br/
    = f.number_field :price
  .actions
    = f.submit
