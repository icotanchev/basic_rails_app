<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
					xmlns:o="urn:schemas-microsoft-com:office:office"
					xmlns:x="urn:schemas-microsoft-com:office:excel"
					xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
					xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Фирми</Data></Cell>
        <Cell><Data ss:Type="String">Сума</Data></Cell>
        <Cell><Data ss:Type="String">Инфо.</Data></Cell>
      </Row>

			<% @file.each do |hash| %>
			<Row>
				<Cell><Data ss:Type="String">Др. <%= hash[:person] %></Data></Cell>
      </Row>
			<% hash.each_pair do |key, value| %>
			<% next if %(person total_amount daily_cost).include? key.to_s %>
			<% value.each do |val| %>
			<Row>
				<Cell><Data ss:Type="String"><%= key %></Data></Cell>
        <Cell><Data ss:Type="String"><%= val.first %></Data></Cell>
        <Cell><Data ss:Type="String"><%= val.last %></Data></Cell>
      </Row>
			<% end %>
			<% end %>

			<% hash[:daily_cost].each do |daily_cost_val| %>
			<% next if daily_cost_val.first == '' %>
			<Row>
				<Cell><Data ss:Type="String">Разход</Data></Cell>
        <Cell><Data ss:Type="String"><%= daily_cost_val.first %></Data></Cell>
        <Cell><Data ss:Type="String"><%= daily_cost_val.last %></Data></Cell>
			</Row>
			<% end %>

			<Row>
        <Cell><Data ss:Type="String">Крайна сума</Data></Cell>
        <Cell><Data ss:Type="String"><%= hash[:total_amount] %></Data></Cell>
			</Row>
			<Row></Row>				
			<% end %>

    </Table>
  </Worksheet>
</Workbook>
