.navbar-header
  %button.navbar-toggle{'data-target' => '#bs-example-navbar-collapse-1', 'data-toggle' => 'collapse', type: 'button'}
  %a.navbar-brand{href: root_path} Sito 92 System
#bs-example-navbar-collapse-1.collapse.navbar-collapse
  %ul.nav.navbar-nav
    %li
      %a{href: root_path} New Report
    %li
      %a{href: daily_reports_path} Reports
    %li
      %a{href: users_path} Users
    %li
      %a{href: clients_path} Clients

  %ul.nav.navbar-nav.navbar-right
    %li.dropdown
      %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
        %span
          Account
          %span.caret
      %ul.dropdown-menu{role: 'menu'}
        - if signed_in?
          - if current_user.admin?
            %li
              %a{href: edit_user_registration_path} Edit Profile
            %li
              %a{href: '#'}
          %li
            = link_to 'Log Out', destroy_user_session_path, :method => :delete
        - else
          %li
            %a{href: new_user_session_path} Log In
          %li
            %a{href: new_user_registration_path} Sign Up
