%h1 Listing clients
%table
  %thead
    %tr
      %th Company
      %th Owner
      %th Name
      %th Id number
      %th{:colspan => "3"}
  %tbody
    - @clients.each do |client|
      %tr
        %td= client.company
        %td= client.owner
        %td= client.name
        %td= client.id_number
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Client', new_client_path
